<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
"http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.neu.carbon.bid.mapper.BidOrderPaymentRecordMapper">
    
    <resultMap type="BidOrderPaymentRecord" id="BidOrderPaymentRecordResult">
        <result property="id"    column="id"    />
        <result property="orderId"    column="order_id"    />
        <result property="gatewayId"    column="gateway_id"    />
        <result property="price"    column="price"    />
        <result property="paymentMethod"    column="payment_method"    />
        <result property="paymentStatus"    column="payment_status"    />
        <result property="paymentTime"    column="payment_time"    />
        <result property="createBy"    column="create_by"    />
        <result property="createTime"    column="create_time"    />
        <result property="updateBy"    column="update_by"    />
        <result property="updateTime"    column="update_time"    />
    </resultMap>

    <sql id="selectBidOrderPaymentRecordVo">
        select id, order_id, gateway_id, price, payment_method, payment_status, payment_time, create_by, create_time, update_by, update_time from bid_order_payment_record
    </sql>

    <select id="selectBidOrderPaymentRecordList" parameterType="BidOrderPaymentRecord" resultMap="BidOrderPaymentRecordResult">
        <include refid="selectBidOrderPaymentRecordVo"/>
        <where>  
            <if test="orderId != null "> and order_id = #{orderId}</if>
            <if test="gatewayId != null "> and gateway_id = #{gatewayId}</if>
            <if test="price != null "> and price = #{price}</if>
            <if test="paymentMethod != null "> and payment_method = #{paymentMethod}</if>
            <if test="paymentStatus != null "> and payment_status = #{paymentStatus}</if>
            <if test="paymentTime != null "> and payment_time = #{paymentTime}</if>
        </where>
    </select>
    
    <select id="selectBidOrderPaymentRecordById" parameterType="Long" resultMap="BidOrderPaymentRecordResult">
        <include refid="selectBidOrderPaymentRecordVo"/>
        where id = #{id} and payment_status = 2
    </select>

    <select id="selectBidOrderPaymentRecordByOrderId" parameterType="Long" resultMap="BidOrderPaymentRecordResult">
        <include refid="selectBidOrderPaymentRecordVo"/>
        where order_id = #{orderId}
    </select>
    <insert id="insertBidOrderPaymentRecord" parameterType="BidOrderPaymentRecord">
        insert into bid_order_payment_record
        <trim prefix="(" suffix=")" suffixOverrides=",">
            <if test="id != null">id,</if>
            <if test="orderId != null">order_id,</if>
            <if test="gatewayId != null">gateway_id,</if>
            <if test="price != null">price,</if>
            <if test="paymentMethod != null">payment_method,</if>
            <if test="paymentStatus != null">payment_status,</if>
            <if test="paymentTime != null">payment_time,</if>
            <if test="createBy != null">create_by,</if>
            <if test="createTime != null">create_time,</if>
            <if test="updateBy != null">update_by,</if>
            <if test="updateTime != null">update_time,</if>
         </trim>
        <trim prefix="values (" suffix=")" suffixOverrides=",">
            <if test="id != null">#{id},</if>
            <if test="orderId != null">#{orderId},</if>
            <if test="gatewayId != null">#{gatewayId},</if>
            <if test="price != null">#{price},</if>
            <if test="paymentMethod != null">#{paymentMethod},</if>
            <if test="paymentStatus != null">#{paymentStatus},</if>
            <if test="paymentTime != null">#{paymentTime},</if>
            <if test="createBy != null">#{createBy},</if>
            <if test="createTime != null">#{createTime},</if>
            <if test="updateBy != null">#{updateBy},</if>
            <if test="updateTime != null">#{updateTime},</if>
         </trim>
    </insert>

    <update id="updateBidOrderPaymentRecord" parameterType="BidOrderPaymentRecord">
        update bid_order_payment_record
        <trim prefix="SET" suffixOverrides=",">
            <if test="orderId != null">order_id = #{orderId},</if>
            <if test="gatewayId != null">gateway_id = #{gatewayId},</if>
            <if test="price != null">price = #{price},</if>
            <if test="paymentMethod != null">payment_method = #{paymentMethod},</if>
            <if test="paymentStatus != null">payment_status = #{paymentStatus},</if>
            <if test="paymentTime != null">payment_time = #{paymentTime},</if>
            <if test="createBy != null">create_by = #{createBy},</if>
            <if test="createTime != null">create_time = #{createTime},</if>
            <if test="updateBy != null">update_by = #{updateBy},</if>
            <if test="updateTime != null">update_time = #{updateTime},</if>
        </trim>
        where id = #{id}
    </update>

    <delete id="deleteBidOrderPaymentRecordById" parameterType="Long">
        delete from bid_order_payment_record where id = #{id}
    </delete>

    <delete id="deleteBidOrderPaymentRecordByIds" parameterType="String">
        delete from bid_order_payment_record where id in 
        <foreach item="id" collection="array" open="(" separator="," close=")">
            #{id}
        </foreach>
    </delete>
</mapper>